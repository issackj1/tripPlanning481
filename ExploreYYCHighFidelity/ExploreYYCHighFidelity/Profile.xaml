                <TextBlock HorizontalAlignment="Left" Height="28" Margin="136.5,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159.083" Foreground="Black" FontSize="20" FontWeight="Bold"><Run FontSize="18" Text="***************"/><LineBreak/><Run Text="*"/></TextBlock>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Billing Address:" VerticalAlignment="Top" FontSize="20" Margin="30,403.5,0,0" FontWeight="Bold" Width="93.91" Foreground="Teal"/>
                <TextBlock HorizontalAlignment="Left" Height="53.6" Margin="130.5,408,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207.583" Foreground="Black" FontSize="18" FontWeight="Bold"><Run Text="100 Percent Road"/><LineBreak/><Run Text="Calgary, AB, R4A 4H0"/></TextBlock>
                <Button Content="Change" HorizontalAlignment="Left" Height="55.5" Margin="305.083,403.537,0,0" VerticalAlignment="Top" Width="105" FontSize="14" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF0023FF" FontStyle="Italic"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" FontSize="20" Margin="30,486,0,0" FontWeight="Bold" Width="93.91" Foreground="Teal"/>
                <TextBlock HorizontalAlignment="Left" Height="37.1" Margin="100.5,487.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263.083" Foreground="Black" FontSize="18" FontWeight="Bold" Text="pleasegiveus100@gmail.com"/>
                <Button Content="Change" HorizontalAlignment="Left" Height="55" Margin="326.083,474.037,-18.583,0" VerticalAlignment="Top" Width="105" FontSize="14" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF0023FF" FontStyle="Italic"/>
            </Grid>

            <Grid Grid.Row="2" Width="411">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Put everything from here up until and not inluding to </Grid> onto the pages where the 4 main buttons -->
                <Button Grid.Column="0" x:Name="calendarButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="102.75" Height="60" Click="calendarButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="img/calendar_2.png" Height="40" Width="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="Schedule" HorizontalAlignment="Center" FontSize="13" FontStyle="Italic"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" x:Name="homeButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="102.75" Height="60" Background="#FF818181">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="img/house.png" Height="40" Width="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="Home" HorizontalAlignment="Center" FontSize="13" FontStyle="Italic"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="2" x:Name="eventsButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="102.75" Height="60" Click="eventsButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="img/event.png" Height="40" Width="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="Events" HorizontalAlignment="Center" FontSize="13" FontStyle="Italic"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="3" x:Name="routesButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="102.75" Height="60" Click="routesButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="img/Map.png" Height="40" Width="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="Route Navigator" HorizontalAlignment="Center" FontSize="13" FontStyle="Italic"/>
                    </StackPanel>
                </Button>

            </Grid>
        </Grid>
    </Grid>
</Page>
