                    <TextBlock Text="Log Out" Margin="49.5,7.5,27,10.5" FontSize="22"/>
                </Border>
            </Button>
            <Ellipse HorizontalAlignment="Left" Height="130.5" Margin="130.5,82.5,0,0" Stroke="#FF040405" StrokeThickness="2" VerticalAlignment="Top" Width="145.5">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="narutosmile.gif"/>
                </Ellipse.Fill>
            </Ellipse>

            <Grid HorizontalAlignment="Left" Height="737" Margin="-1.5,-6,0,-10" VerticalAlignment="Top" Width="412.5">
                <Grid>
                    <Rectangle Margin="-3.333,-0.009,-0.168,667.509" Width="416" Fill="Teal"/>
                    <TextBlock HorizontalAlignment="Left" Height="39.667" Margin="124.835,12.165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" FontSize="30" FontWeight="Bold" Foreground="White" Text="My Profile"/>
                    <TextBlock HorizontalAlignment="Left" Height="39.667" Margin="8,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" FontWeight="Bold" Foreground="White" Text="&lt; Back" FontSize="18"/>
                    <Grid HorizontalAlignment="Left" Height="35.832" Margin="341.5,16,0,0" VerticalAlignment="Top" Width="44">
                        <Grid.Background>
                            <ImageBrush ImageSource="airplanewhite.png"/>
                        </Grid.Background>
                    </Grid>
                </Grid>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Naruto" VerticalAlignment="Top" FontSize="24" Margin="160.5,228,0,0" FontWeight="Bold" Foreground="Teal"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" FontSize="20" Margin="30,280.5,0,0" FontWeight="Bold" Foreground="Teal"/>
                <Button Content="Change" HorizontalAlignment="Left" Height="55.5" Margin="257.083,265.537,0,0" VerticalAlignment="Top" Width="105" FontSize="14" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF0023FF" FontStyle="Italic"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Payment:" VerticalAlignment="Top" FontSize="20" Margin="30,345,0,0" FontWeight="Bold" Width="93.91" Foreground="Teal"/>
