            <Grid HorizontalAlignment="Left" Height="629" Margin="-5,-6,0,0" VerticalAlignment="Top" Width="416" Opacity="0.4">
                <Grid.Effect>
                    <BlurEffect/>
                </Grid.Effect>
            </Grid>
            <Button x:Name="logoutButton" HorizontalAlignment="Left" Height="90.571" Margin="108.5,526.429,0,0" VerticalAlignment="Top" Width="192" FontSize="36" FontWeight="Bold" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="1,3" Foreground = "White" Click="logoutButton_Click">
