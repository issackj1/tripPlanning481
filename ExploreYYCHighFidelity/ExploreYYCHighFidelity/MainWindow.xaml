<Window x:Class="ExploreYYCHighFidelity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExploreYYCHighFidelity"
        mc:Ignorable="d"
        Title="MainWindow" Height="731" Width="411" Background="#cc0000" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.Effect>
            <BlurEffect/>
        </Grid.Effect>
        <Grid.Background>
            <ImageBrush x:Name ="background" ImageSource="tower2.png" Stretch="Uniform">
                <ImageBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="2" ScaleY="2"/>
                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                        <RotateTransform CenterY="0.5" CenterX="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ImageBrush.RelativeTransform>
            </ImageBrush>
        </Grid.Background>
    </Grid>
</Window>
