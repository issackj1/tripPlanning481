                        <TextBlock Text="Upcoming" Foreground="SkyBlue"  VerticalAlignment="Center" FontWeight="Bold" FontSize="14" />
                    </MenuItem.Header>
                </MenuItem>

                <MenuItem Height="50" Width="90" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}">
                    <MenuItem.Header>
                        <TextBlock Text="Nearby"  VerticalAlignment="Center" Foreground="SkyBlue" FontSize="14"  />
                    </MenuItem.Header>
                </MenuItem>

                <MenuItem Height="50" Width="90" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}">
                    <MenuItem.Header>
                        <TextBlock Text="Bookmarked"  VerticalAlignment="Center" Foreground="White" FontSize="14" FontWeight="Bold" />
                    </MenuItem.Header>
                </MenuItem>




            </Menu>
            <StackPanel Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Height="432.431">


                <Grid>
                    <Button Margin="10,10,10,10" Width="320" FontStyle="Italic" >
